{
  "name": "Event",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": false
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true,
      "comments": "the title of the event"
    },
    "body": {
      "type": "string",
      "comments": "the description and details of the event"
    },
    "followersCount": {
      "type": "number",
      "default": 0,
      "comments": "the number of followers"
    }
  },
  "mixins": {
    "TimeStamp" : true
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "Seeder",
      "foreignKey": "ownerId"
    },
    "followers": {
      "type": "hasAndBelongsToMany",
      "model": "Seeder"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "permission": "DENY",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "property": ["followersCount"]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
