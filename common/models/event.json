{
  "name": "Event",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": false
  },
  "properties": {
    "title": {
      "required": true,
      "type": "string",
      "comments": "the title"
    },
    "body": {
      "type": "string",
      "comments": "the description and details"
    },
    "followersCount": {
      "type": "number",
      "default": 0,
      "comments": "the number of followers"
    },
    "tags": {
      "type": ["string"],
      "comments": "the hashtags extracted from the body"
    },
    "start": {
      "required": true,
      "type": "date",
      "comments": "the starting date and time"
    },
    "end": {
      "type": "date",
      "comments": "the ending date and time"
    },
    "rrule": {
      "type": "string",
      "comments": "the recurrence rule as defined in the iCalendar RFC"
    }
  },
  "mixins": {
    "TimeStamp" : true
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "Seeder",
      "foreignKey": "ownerId"
    },
    "followers": {
      "type": "hasAndBelongsToMany",
      "model": "Seeder"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": ["esSearch"]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": []
}
